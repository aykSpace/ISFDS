@model IntegratedFlghtDynamicSystem.Models.LoginModel

@{
    Layout = null;
}

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Вход</h3>
            </div>
            <div class="modal-body">
                @{Html.EnableClientValidation();}
                @{Html.EnableUnobtrusiveJavaScript();}
                @using (Html.BeginForm("AjaxLogin", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "AjaxLoginForm", ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "Email", @placeholder = "Email" })
                            <p class="help-block">Введите Email</p>
                            @Html.ValidationMessage("Email")
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="Password">Пароль</label>
                        <div class="col-sm-10">
                            @Html.Password("Password", Model.Password, new { @class = "form-control", @id = "Password", @placeholder = "Password" })
                            @Html.ValidationMessage("Password")
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RememberMe, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @id = "RememberMe" })
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Закрыть</button>
                <button class="btn btn-primary" id="LoginButton">Вход</button>
            </div>
        </div>
    </div>
</div>